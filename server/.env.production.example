# ============================================
# MSIA 生产环境配置模板
# 复制此文件为 .env.production 并填写真实值
# ============================================

# 服务器配置
PORT=4000
NODE_ENV=production
HOST=0.0.0.0

# 数据库连接 (生产环境使用强密码)
DATABASE_URL="postgresql://postgres:强密码@localhost:5432/MSIA?schema=public"

# 数据库详细配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=强密码
DB_NAME=MSIA
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# 允许的前端来源 (生产环境域名)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# 操作员认证 (生产环境必须使用强令牌)
OPERATOR_TOKEN=your_production_secure_token_min_32_chars

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
KNOWLEDGE_BASE_DIR=./knowledge_base

# 日志配置
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_MAX_FILES=30

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
