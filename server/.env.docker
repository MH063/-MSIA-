# ============================================
# MSIA 服务端 Docker 环境变量配置
# ============================================

# 服务器配置
PORT=4000
HOST=0.0.0.0
NODE_ENV=production

# 数据库连接URL (使用 Docker 服务名连接)
DATABASE_URL="postgresql://postgres:msia_secure_password_2024@db:5432/MSIA?schema=public"

# 数据库详细配置
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=msia_secure_password_2024
DB_NAME=MSIA
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# 跨域配置
ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://127.0.0.1

# 操作员认证令牌
OPERATOR_TOKEN=msia_docker_token_change_in_production

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
KNOWLEDGE_BASE_DIR=./knowledge_base

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=30
