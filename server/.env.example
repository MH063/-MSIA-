# 服务器端口
PORT=4000

# 数据库连接字符串（生产环境请使用强密码）
# 格式: postgresql://用户名:密码@主机:端口/数据库名?schema=public
DATABASE_URL="postgresql://postgres:YOUR_STRONG_PASSWORD@localhost:5432/MSIA?schema=public"

# JWT配置（生产环境必需）
# 生成方式: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="YOUR_JWT_SECRET_HERE"

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
# 生产环境请使用强密码，不要与DATABASE_URL中的密码相同
DB_PASSWORD=YOUR_DB_PASSWORD
DB_NAME=MSIA
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Redis配置（可选，用于会话存储和缓存）
# REDIS_URL=redis://localhost:6379

# 操作员令牌配置（生产环境使用）
# OPERATOR_TOKEN=your_secure_operator_token
# OPERATOR_TOKENS_JSON={"token1":{"operatorId":1,"role":"admin"}}

# 安全配置
# NODE_ENV=production
# ENABLE_SENSITIVE_LOGGING=false
